@page "/Login"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RemoteAppWeb.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
} 
<h1 class="LoginHeader">Se Connecter</h1>
<div class="row LoginRow">
    <div class="col-md-4">
        @if (!String.IsNullOrEmpty(@Model.LoginErrorMessage))
        {
            <div class="form-group row LoginErrorMessage" >
                 <span>Le nom d'utilisateur ou le mot de passe est incorrect !</span>
            </div>
        }
        <section class="LoginSection">
            <form id="account" method="post" class="LoginForm">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" asp-for="UserLogin">Utilisateur</label>
                    <div class="col-sm-8 col-form-input">
                        <input asp-for="UserLogin" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" asp-for="Password">Mot de passe</label>
                    <div class="col-sm-8 col-form-input">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-primary LoginBtn">Se connecter</button>
                </div>
            </form>
        </section>
    </div>
</div>
<script>
    function deleteAllCookies() {
        var cookies = document.cookie.split(";");
        for (var i = 0; i < cookies.length; i++) {
            var cookie = cookies[i];
            var eqPos = cookie.indexOf("=");
            var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
            document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
        }
    }
    deleteAllCookies();
</script>
<style>
    section.LoginSection {
        width: 50%;
        margin: 0 auto;
        padding: 50px;
        border: 1px solid #dcd7d7;
        min-height: 250px;
    }
    form#account .col-form-label {
        width: 18%;
        float: left;
        height: 40px;
        vertical-align: middle;
        font-size: 18px;
        font-weight: bold;
    }
    form#account .col-form-input {
        height: 35px;
        width: 80%;
        float: right;
        border: 1px solid #c7c1c1;
        margin: 0 5px;
        border-radius: 3px;
    }
    form#account .form-control {
        width: 100%;
        height: 100%;
        border: 0;
        border-radius: 3px;
    }
    .form-group.row {
        height: 40px;
        margin: 5px;
    }
    .LoginBtn {
        padding: 10px;
        border-radius: 20px;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 15px;
        min-width: 125px;
        height: 45px;
        background-color: #57b846;
        border-radius: 25px;
        font-family: Poppins-Regular;
        font-size: 16px;
        color: #fff;
        line-height: 1.2;
        -webkit-transition: all .4s;
        -o-transition: all .4s;
        -moz-transition: all .4s;
        transition: all .4s;
        border-color: transparent;
        margin: 20px;
        margin-left: 20%;
    }
    h1.LoginHeader {
        width: 100%;
        height: 100px;
        line-height: 100px;
        background: #5b635a;
        color: #fff;
        text-align: center;
        font-size: 50px;
    }
    section.LoginSection {
        width: 50%;
        margin: 0 auto;
        padding: 50px;
        border: 1px solid #dcd7d7;
        min-height: 120px;
        height: 140px;
        margin-top: 5px;

    }
    body {
        background: #fbfbfb;
    }
    .LoginErrorMessage {
        width: 35%;
        margin: 0 auto !important;
        padding: 2px;
        height: 30px;
        line-height: 30px;
        color: #fff;
        font-size: 16px;
        font-family: sans-serif;
        padding-left: 20px;
        border-radius: 5px;
        font-weight: 600;
        background-color: #f33030c9;
    }
</style>